{
    "name": "cart-service",
    "version": "0.1.0",
    "description": "Server de Carrito",
    "repository": {
        "type": "git",
        "url": "https://github.com/nmarsollier/2018_microservicios.git"
    },
    "author": "Nestor Marsollier",
    "license": "MIT",
    "scripts": {
        "start": "npm run build && npm run watch",
        "build": "npm run build-ts && npm run tslint && npm run apidoc && npm run apidocmd",
        "serve": "node dist/server.js",
        "watch": "concurrently -k -p \"[{name}]\" -n \"TypeScript,Node\" -c \"yellow.bold,cyan.bold,green.bold\"  \"npm run watch-ts\" \"nodemon dist/server.js\"",
        "build-ts": "tsc",
        "watch-ts": "tsc -w",
        "tslint": "tslint -c tslint.json -p tsconfig.json",
        "apidoc": "./node_modules/.bin/apidoc -i src -o ./dist/public",
        "apidocmd": "./node_modules/.bin/apidoc-markdown2 -p ./dist/public -o README-API.md"
    },
    "dependencies": {
        "body-parser": "1.19.0",
        "compression": "1.7.4",
        "connect-mongo": "3.2.0",
        "dotenv": "8.2.0",
        "express": "4.17.1",
        "typed-rest-client": "1.7.3",
        "escape-html": "1.0.3",
        "mongoose": "5.9.15",
        "node-cache": "5.1.0",
        "morgan": "1.10.0",
        "winston": "3.2.1",
        "helmet": "3.22.0",
        "cors": "2.8.5",
        "amqplib": "0.5.6",
        "jimp": "0.12.1",
        "async": "3.2.0"
    },
    "devDependencies": {
        "@types/body-parser": "1.19.0",
        "@types/express": "4.17.6",
        "@types/jest": "25.2.3",
        "@types/mongodb": "3.5.18",
        "@types/mongoose": "5.7.21",
        "@types/escape-html": "1.0.0",
        "@types/morgan": "1.9.0",
        "@types/node": "14.0.5",
        "@types/helmet": "0.0.47",
        "@types/cors": "2.8.6",
        "@types/compression": "1.7.0",
        "@types/amqplib": "0.5.13",
        "@types/async": "3.2.3",
        "apidoc": "0.22.1",
        "apidoc-markdown2": "0.3.7",
        "concurrently": "5.2.0",
        "tslint": "6.1.2",
        "nodemon": "2.0.4",
        "typescript": "3.9.3"
    }
}
